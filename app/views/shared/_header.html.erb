<header>
  <div class="header-inner">
  <div class="wrapper">
    <h1><%= link_to 'LOOK', root_path ,'data-turbolinks': false %></h1>
    <% if current_user && current_page?(myclosets_path) %>
      <%= link_to search_myclosets_path, remote: true do %>
        <i class="fas fa-search"></i>
      <% end %>
    <% end %>
    <div class="no-login">
      <% if current_user %>
        <p><%= link_to 'Logout', login_path, method: :delete %></p>
        <p></p>
      <% else %>
        <p><%= link_to 'Login', login_path %></p>
        <p><%= link_to 'SignUp', new_user_path %></p>
      <% end %>
    </div>
  </div>
</div>
</header>
