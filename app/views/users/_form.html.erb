<%= form_with model: user, local: true do |f| %>
  <div class="form-group">
    <%= f.text_field :name,class: 'input-form', placeholder: 'ユーザー名を入力してください'%>
  </div>
  <div class="form-group">
    <%= f.text_field :email,class: 'input-form', placeholder: 'メールアドレスを入力してください'%>
  </div>
  <div class="form-group">
    <%= f.text_field :password,class: 'input-form', placeholder: 'パスワードを入力してください'%>
  </div>
  <%= f.submit '登録する',class: 'button' %>
<% end %>
