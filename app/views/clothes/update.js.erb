$("#change-selected-link-<%=@clothe.id%>").attr("href", "<%= clothe_path(@clothe,clothe: {selected: !@clothe.selected})%>");
<% if @clothe.selected %>
  $("#change-selected-link-<%=@clothe.id%>").text("選択を解除する");
<% else %>
  $("#change-selected-link-<%=@clothe.id%>").text("選択する");
<%end%>

$("#selected_count").text("<%=Clothe.where(selected: true).count%>件選択中です")
