<%= render 'shared/nav' %>
<div class="contents-wrapper">
   <% if Clothe.where(selected: true).count > 0 %>
  <p id="js-selected-count-prev" class="selected-count"><%= "#{Clothe.where(selected: true).count}件選択中です" %></p>
  <% end %>
  <p id="js-selected-count" class="selected-count"></p>
  <%= render 'items', clothes: @clothes %>
  <%= paginate @clothes %>
  <p id="js-selected-count" class="selected-count"></p>
</div>

<div class="outfit-button">
  <%= link_to root_path , 'data-turbolinks': false, data: {confirm: "選択した服を組み合わせますか？"} do %><%=image_tag "clothes.png"%><% end %>
</div>

<script>
$(function(){
  // modal
    $(".js-modal-open").on('click',function(){
        $('.js-modal').fadeIn();
        return false;
    });
    $(".js-modal-close").on('click',function(){
        $('.js-modal').fadeOut();
        return false;
    });
});
  // items要素が70vhより小さければfooternをbottom:0に設置
$(document).ready(function(){
  var items_height = $(".items").height();
  var view_height = $(window).height();
  if (items_height < 0.7 * view_height){
    $(".footer").addClass("footer-position-bottom")
  };
});
</script>
