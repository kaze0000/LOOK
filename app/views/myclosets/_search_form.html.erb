<p>MyClosetから検索できます。</p>
<%= search_form_for @q, url: url, id:'search-form' do |f| %>
<div class="form-group">
  <%= f.label :clothe_brand_name_name, 'ブランド名を入力してください。'%>
  <%= f.search_field :clothe_brand_name_name_cont, class:'input-form' %>
</div>
<div class="form-group">
  <%= f.label :clothe_category, 'カテゴリーを選択してください。' %>
  <%= f.select :clothe_category_eq, Clothe.categories.map{|k,v|[Clothe.categories_i18n[k],v]}, {include_blank: ''}, {class:'select-form'} %>
  <i class="fa fa-angle-down"></i>
</div>
<div class="form-group">
  <%= f.label :clothe_category, 'ジェンダーを選択してください。' %>
  <%= f.select :clothe_gender_eq, Clothe.genders.map{|k,v|[Clothe.genders_i18n[k],v]}, {include_blank: ''}, {class:'select-form'} %>
  <i class="fa fa-angle-down"></i>
</div>
<%= f.submit '検索する', class:'button' %>
<% end %>
